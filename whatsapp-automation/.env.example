# Configurações do Servidor
PORT=3000
NODE_ENV=development
TIMEZONE=America/Sao_Paulo

# Configurações do Banco de Dados
DATABASE_PATH=./data/database.sqlite

# Configurações de Autenticação
JWT_SECRET=seu_jwt_secret_aqui
ADMIN_PASSWORD=sua_senha_admin_aqui

# Configurações de Email (SendGrid)
SENDGRID_API_KEY=sua_api_key_sendgrid
EMAIL_FROM=noreply@seudominio.com
ALERT_EMAIL=seu_email@gmail.com

# Configurações Telegram (Opcional)
TELEGRAM_BOT_TOKEN=seu_bot_token
TELEGRAM_CHAT_ID=seu_chat_id

# Configurações Google Sheets
GOOGLE_SHEETS_CREDENTIALS_PATH=./config/google-credentials.json
GOOGLE_SHEETS_ID=sua_planilha_id

# Configurações do Sistema Python (API existente)
PYTHON_API_BASE_URL=https://seu-app.onrender.com

# Configurações WhatsApp
WHATSAPP_SESSION_PATH=./data/whatsapp-session
WHATSAPP_RATE_LIMIT_MESSAGES_PER_MINUTE=10
WHATSAPP_RETRY_ATTEMPTS=3
WHATSAPP_RETRY_DELAY_MS=5000

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Configurações de Agendamento
CRON_SCHEDULE_SORTEIOS=15 18 * * *
CRON_TIMEZONE=America/Sao_Paulo

# Configurações de Monitoramento
HEALTH_CHECK_INTERVAL_MINUTES=5
METRICS_ENABLED=true

