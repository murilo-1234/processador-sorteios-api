# Configurações do servidor
PORT=3000
NODE_ENV=development

# Configurações de segurança
JWT_SECRET=whatsapp-automation-super-secret-key-2024
ADMIN_PASSWORD=admin123

# Configurações do banco de dados
DATABASE_PATH=./data/database.sqlite

# Configurações do Google Sheets
GOOGLE_SHEETS_ID=sua_planilha_id_aqui
GOOGLE_SHEETS_CREDENTIALS_PATH=./src/config/google-credentials.json

# Configurações de alertas por email (SendGrid)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@whatsapp-automation.com
ALERT_EMAIL=

# Configurações de alertas por Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Configurações de logs
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_MAX_SIZE=20m

# Configurações do WhatsApp
WHATSAPP_SESSION_PATH=./data/whatsapp-session
WHATSAPP_RETRY_ATTEMPTS=3
WHATSAPP_RETRY_DELAY=5000

# Configurações de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de jobs
JOB_SORTEIOS_CRON=15 18 * * *
JOB_CLEANUP_CRON=0 2 * * *
JOB_HEALTH_CHECK_CRON=*/5 * * * *

# Configurações de monitoramento
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=60000

# Configurações de desenvolvimento
DEBUG_MODE=false
MOCK_WHATSAPP=false
MOCK_GOOGLE_SHEETS=false

